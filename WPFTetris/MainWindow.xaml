<Window x:Class="WPFTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTetris"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="375.2"
        KeyDown="Window_KeyDown">
    <StackPanel Background="Azure">
        <WrapPanel Name="mainPanel" DockPanel.Dock="Left" Margin="0,20,0,0" Width="201" Height="441" MaxHeight="441" MaxWidth="201" Background="LightGray">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                </Style>
            </WrapPanel.Resources>
        </WrapPanel>
        <Label x:Name="lblPoints" Content="Очки: " HorizontalAlignment="Center" Margin="15"/>
        <Button Height="50" Width="100" Content="Начать" Click="Button_Click"/>
    </StackPanel>
</Window>
